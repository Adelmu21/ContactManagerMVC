@model ContactsData.Contact  

@{
    ViewData["Title"] = "Details";
}

<h1>Contact Details</h1>
@*Details page of a certain contact on the list*@
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Name:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            <label>Phone:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            <label>Email:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            <label>Category:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
        <dt class="col-sm-2">
            <label>Date Added:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
    </dl>

            <div class="form-group">
                @*button to go back to main page*@
                @Html.ActionLink("Back to list", "Index", "Contact", null, new { @class = "btn btn-dark" })
            </div>

</div>
